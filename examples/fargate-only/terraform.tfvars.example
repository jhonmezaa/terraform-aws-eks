# Account and Project Configuration
account_name = "dev"
project_name = "fargate-app"

# Cluster Configuration
cluster_version = "1.31"

# Network Configuration
vpc_id = "vpc-0123456789abcdef0"

# IMPORTANT: Fargate requires PRIVATE subnets with NAT Gateway
# These subnets MUST have a route to 0.0.0.0/0 via NAT Gateway
private_subnet_ids = [
  "subnet-0123456789abcdef0",  # Private subnet AZ-a
  "subnet-0123456789abcdef1",  # Private subnet AZ-b
  "subnet-0123456789abcdef2"   # Private subnet AZ-c
]

# Tags
tags = {
  Environment = "dev"
  ManagedBy   = "terraform"
  Example     = "fargate-only"
  Compute     = "serverless"
  Team        = "platform"
}
